<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<GridPane fx:id="mainGridPane" fx:controller="Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Welcome to the Quiz Program" GridPane.rowIndex="0" GridPane.columnIndex="0" fx:id="welcomeMessage"/>
    <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="25" style="-fx-background-color: rgba(33, 255, 192, 0.1); -fx-background-radius: 10;">
        <BorderPane>
            <left>
                <VBox spacing="25">
                    <Button text="User Guide" onAction="#guideLine"/>
                    <Button text="Load Quiz" onAction="#loadQuiz" fx:id="quizPrep"/>
                    <Button text="Build New Quiz" onAction="#buildNewQuiz"/>
                </VBox>
            </left>
            <right>
                <VBox spacing="25" BorderPane.alignment="CENTER_LEFT" style="-fx-padding: 0 200 0 0;">
                    <Button text="Edit Quiz" onAction="#editQuiz" fx:id="edit"/>
                    <Button text="Score Board" onAction="#pullScore"/>
                    <Button text="Exit Program" onAction="#bye"/>
                </VBox>
            </right>
        </BorderPane>


    </VBox>
</GridPane>